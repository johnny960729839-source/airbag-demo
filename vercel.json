{
  "version": 2,
  "functions": {
    "api/flight/**/*.js": { "runtime": "nodejs20.x" },
    "api/airports.js":     { "runtime": "nodejs20.x" },
    "api/ping.js":         { "runtime": "edge" }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
